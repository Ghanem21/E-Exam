<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
           >

            <TextView
                android:id="@+id/hamada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:text="Ahmed Hamada"
                android:textColor="@color/orange_500"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hamada"
                android:layout_marginStart="10dp"
                android:fontFamily="casual"
                android:text="Back-End Developer"
                android:textColor="@color/black"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/hamada" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"

            >

            <TextView
                android:id="@+id/ghanem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:text="Abdulrahman Ghanem"
                android:textColor="@color/orange_500"
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ghanem"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:fontFamily="casual"
                android:text="Android Developer"
                android:textColor="@color/black"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ghanem" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"

            >

            <TextView
                android:id="@+id/fathy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="AbdAllah Fathy"
                android:textStyle="bold"
                android:textColor="@color/orange_500"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fathy"
                android:layout_marginStart="10dp"
                android:text="Front-End Developer"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/fathy" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"

            >

            <TextView
                android:id="@+id/herfy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="Abdulrahman Ragab"
                android:textColor="@color/orange_500"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/herfy"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:fontFamily="casual"
                android:text="Android Developer"
                android:textColor="@color/black"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/herfy" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supervision"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="italic||bold"
                android:textColor="@color/orange_500"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/abohany" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="230dp"
                android:background="@drawable/rashwan" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            >


            <TextView
                android:id="@+id/abohany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="Dr. Amr Abohany"
                android:textStyle="bold"
                android:textColor="@color/orange_500"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/rashwan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="casual"
                android:text="Eng. Rashwan"
                android:textColor="@color/orange_500"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>

</ScrollView>